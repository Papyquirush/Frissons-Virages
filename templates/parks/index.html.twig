{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <div class="container mx-auto p-4">
        <div class="w-full flex justify-around mt-4">
			<a href="{{ path('coaster_list') }}" 
			class="p-4 rounded-lg text-black font-semibold shadow-md 
					{% if app.request.get('_route') == 'coaster_list' %}
						bg-yellow-500 hover:bg-yellow-600
					{% else %}
						bg-gray-500 hover:bg-gray-600
					{% endif %}">
				Coasters
			</a>
			<a href="{{ path('park_list') }}" 
			class="p-4 rounded-lg text-black font-semibold shadow-md 
					{% if app.request.get('_route') == 'park_list' %}
						bg-yellow-500 hover:bg-yellow-600
					{% else %}
						bg-gray-500 hover:bg-gray-600
					{% endif %}">
				Parcs
			</a>
		</div>
        <h1 class="text-3xl font-bold mb-4">Rechercher un Parc :</h1>
        <form action="{{ path('park_list') }}" method="get" class="mb-8">
            <div class="flex space-x-4">
                <div class="flex items-center">
                    <input type="text" name="q" placeholder="Nom du parc" value="{{ app.request.query.get('q') }}" 
                           class="w-full p-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-transparent">
                </div>
                <div class="flex items-center">
                    <select name="country" class="w-full p-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-transparent">
                        <option value="">Tous les pays</option>
                        {% for country in countries %}
                            <option value="{{ country }}" {% if app.request.query.get('country') == country %}selected{% endif %}>
                                {{ country|trans({}, 'countries') }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                <div>
                    <button type="submit" class="w-full px-4 py-2 bg-yellow-500 text-white font-semibold rounded-md shadow-md hover:bg-yellow-700 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:ring-opacity-75">
                        Rechercher
                    </button>
                </div>
            </div>
        </form>

        <h2 class="text-2xl font-semibold underline mb-4">Liste des Parcs :</h2>
        <ul class="space-y-4">
            {% for park in parks %}
                <li class="p-4 flex space-x-4 bg-white rounded-lg shadow-md hover:bg-gray-100 items-center">
                    <div class="flex-1">
                        <a href="{{ path('park_details', {'name': park.name}) }}" class="text-lg font-medium text-yellow-600 hover:underline">
                            {{ park.name }}
                        </a>
                        <p class="text-sm text-gray-600">{{ park.country|trans({}, 'countries') }}</p>
                    </div>
                    {% if app.user %}
                        {% if park in favoriteParks %}
                            <a href="{{ path('favorite_park_remove', { name: park.name }) }}" class="text-red-500 hover:underline ml-4">
                                Remove
                            </a>
                        {% else %}
                            <a href="{{ path('favorite_park_add', { name: park.name }) }}" class="text-green-500 hover:underline ml-4">
                                Add to Favorites
                            </a>
                        {% endif %}
                    {% endif %}

                    <icon-star class="text-yellow-500"></icon-star>
                </li>
            {% endfor %}
        </ul>

        <div class="mt-8 flex justify-center space-x-4">
            {% if currentPage > 1 %}
                <a href="{{ path('park_list', app.request.query.all|merge({'page': currentPage - 1})) }}" 
                   class="px-4 py-2 bg-gray-300 text-gray-700 rounded-md shadow-md hover:bg-gray-400">Previous</a>
            {% endif %}
            
            <span class="px-4 py-2">Page {{ currentPage }} sur {{ totalPages }}</span>
            
            {% if currentPage < totalPages %}
                <a href="{{ path('park_list', app.request.query.all|merge({'page': currentPage + 1})) }}" 
                   class="px-4 py-2 bg-gray-300 text-gray-700 rounded-md shadow-md hover:bg-gray-400">Next</a>
            {% endif %}
        </div>
    </div>
{% endblock %}