            {% if app.user %}
                <a href="{{ path('favorite_coaster_list') }}" class="hover:text-yellow-500 transition duration-300">Mes favoris</a>
                <a href="{{ path('app_logout') }}" class="hover:text-yellow-500 transition duration-300">Se déconnecter</a>
            {% else %}
                <a href="{{ path('app_login') }}" class="hover:text-yellow-500 transition duration-300">Se connecter</a>
                <a href="{{ path('register') }}" class="hover:text-yellow-500 transition duration-300">Créer un compte</a>
            {% endif %}


        </nav>

    </div>
