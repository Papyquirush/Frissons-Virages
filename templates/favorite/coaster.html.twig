{% extends 'base.html.twig' %}

{% block title %}Favorite Coasters{% endblock %}

{% block body %}
    <div class="container mx-auto p-4">
        <h1 class="text-2xl font-bold mb-4">Favorite Coasters</h1>

        <a href="{{ path('favorite_park_list') }}" class="text-gray-500 hover:underline ml-4">
            Go to Favorite Parks
        </a>

        {% if coasters is empty %}
            <p class="text-gray-500">You have no favorite coasters.</p>
        {% else %}
            <ul class="list-disc pl-5">
                {% for coaster in coasters %}
                    <li class="mb-2 flex justify-between items-center">
                        <a href="{{ path('coaster_details', { name: coaster.name }) }}" class="text-blue-500 hover:underline">
                            {{ coaster.name }}
                        </a>
                        <a href="{{ path('favorite_coaster_remove', { name: coaster.name }) }}" class="text-red-500 hover:underline ml-4">
                            Remove
                        </a>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
    </div>
{% endblock %}