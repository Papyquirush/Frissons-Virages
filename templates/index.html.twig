{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <div class="container mx-auto p-4">
        <h1 class="text-3xl font-bold mb-4">Rechercher un coaster :</h1>
        <form action="" method="get" class="mb-8">
            <div class="flex items-center">
                <input type="text" name="q" placeholder="Nom du coaster" class="w-full p-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                <button type="submit" class="ml-2 px-4 py-2 bg-blue-500 text-white font-semibold rounded-md shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-75">Rechercher</button>
            </div>
        </form>
        <h2 class="text-2xl font-semibold mb-4">Liste des coasters :</h2>
        <ul class="space-y-4">
            {% for coaster in coasters %}
                <li class="p-4 bg-white rounded-lg shadow-md hover:bg-gray-100">
                    <a href="#" class="text-lg font-medium text-blue-600 hover:underline">{{ coaster.name }}</a>
                    {# {{ path('coaster_details', {'id': coaster.id}) }} #}
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}